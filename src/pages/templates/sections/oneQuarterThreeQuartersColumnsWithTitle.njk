        <div class="grid__cell grid__cell--span-12">
            {% block title %}{% endblock %}
        </div>
    </div>
    <div class="grid__row">
        <div class="grid__cell grid__cell--span-3">
            {% block column2 %}{% endblock %}
        </div>
